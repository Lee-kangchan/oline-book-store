<!-- views/home/sign-in.ejs -->

<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script
      src="https://kit.fontawesome.com/4067fec9b0.js"
      crossorigin="anonymous"
    ></script>

    <link rel="stylesheet" href="/css/home/sign-in.css" />
    <script type="module" src="/js/home/sign-up.js" defer></script>

    <title>도서 판매 프로그램</title>
  </head>

  <body>
    <!-- 로그인 폼 -->
    <section id="login-form">
      <h1>
        <div style="text-align: center">Oline Book Store</div>
      </h1>
      <h2>
        <div style="text-align: center">회원가입 페이지</div>
      </h2>
      <form method="post" action="./sign-up">
        <table>
          <label>이름</label>
          <input
            type="text"
            class="input"
            placeholder="이름"
            id="user_name"
            name="user_name"
          />
          <label>아이디</label>
          <input
            type="text"
            class="input"
            placeholder="아이디"
            id="user_id"
            name="user_id"
          />
          <label>비밀번호</label>
          <input
            type="password"
            class="input"
            placeholder="비밀번호"
            id="user_password"
            name="user_password"
          />
          <label>전화번호</label>
          <input
            type="text"
            class="input"
            placeholder="전화번호"
            id="user_phone"
            name="user_phone"
          />
        </table>
        <input type="submit" value="회원가입" />
      </form>

      <article id="btns">
        <input type="button" value="이전 페이지" onClick="history.go(-1)" />
      </article>
    </section>
  </body>
</html>
